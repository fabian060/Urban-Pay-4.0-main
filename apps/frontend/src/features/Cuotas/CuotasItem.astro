---
const { date, description, date_limit, id, monto } = Astro.props;
import { Icon } from 'astro-icon/components';
---

<li id={id} class="flex gap-4 justify-between items-center" data-status="inputs-deshabilitados">
  <div class="flex flex-wrap md:flex-nowrap gap-2 flex-grow">
    <input class="w-full bg-gray-600 rounded-md p-2 outline-none text-white" type="text" value={description} readonly>
    <input class="w-full bg-gray-600 rounded-md p-2 outline-none text-white" type="text" value={date} readonly>
    <input class="w-full bg-gray-600 rounded-md p-2 outline-none text-white" type="text" value={date_limit} readonly>
    <input class="w-full bg-gray-600 rounded-md p-2 outline-none text-white" type="text" value={monto} readonly>
  </div>
  <div class="bg-red-500 rounded-lg hover:bg-red-400 dark:bg-red-500 dark:hover:bg-red-400 transition-colors duration-200">
    <button class="delete-btn w-8 h-8 flex justify-center items-center text-gray-700">
      <Icon name="mdi:alpha-x" class="w-6 h-6" is:inline/>
    </button>
  </div>
</li>
